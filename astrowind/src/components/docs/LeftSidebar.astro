---
//import { SIDEBAR } from '~/config.mjs';

const SIDEBAR = {
	'Getting started': [
		{ text: 'Quickstart', link: 'quick-start' },
		{ text: 'Simple flow', link: 'simple-flow' },
	],
	'Database connectors': [{ text: 'Connection managers', link: 'connection-managers' }],
};

---

<aside class="w-64" aria-label="Sidebar">
	<div class="overflow-y-auto py-4 px-3 bg-gray-50 rounded dark:bg-gray-800">
		<ul class="space-y-2">
			{
				Object.entries(SIDEBAR).map(([header, children]) => (
					<li>
						<button
							type="button"
							class="flex items-center p-2 w-full text-base font-normal text-gray-900 rounded-lg transition duration-75 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
							aria-controls={header}
							data-collapse-toggle={header}
						>
							<span class="flex-1 ml-3 text-left whitespace-nowrap">{header}</span>
							<svg
								aria-hidden="true"
								class="w-6 h-6"
								fill="currentColor"
								viewBox="0 0 20 20"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									fill-rule="evenodd"
									d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
									clip-rule="evenodd"
								/>
							</svg>
						</button>
						<ul id={header} class="hidden py-2 space-y-2">
							{children.map((child) => {
								const url = Astro.site?.pathname + child.link;
								return (
									<li>
										<a
											href={url}
											class="flex items-center p-2 pl-11 w-full text-base font-normal text-gray-900 rounded-lg transition duration-75 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
										>
											{child.text}
										</a>
									</li>
								);
							})}
						</ul>
					</li>
				))
			}
		</ul>
	</div>
</aside>
